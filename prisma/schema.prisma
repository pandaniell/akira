// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Guild {
  discordGuildId String   @id @map("discord_guild_id")
  botPrefix      String   @default(value: "!") @map("bot_prefix")
  language       Language @default(en)
  createdAt      DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt      DateTime @updatedAt @map("updated_at") @db.Timestamptz

  @@map("guilds")
}

model Question {
  id               Int      @id @default(autoincrement())
  discordMessageId String   @unique @map("discord_message_id")
  originalAnswers  Json     @map("original_answers") @db.JsonB
  answers          Answer[]
  createdAt        DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt        DateTime @updatedAt @map("updated_at") @db.Timestamptz

  @@map("questions")
}

model Answer {
  id            Int      @id @default(autoincrement())
  discordUserId String   @map("discord_author_id")
  /// Refers to position in Question.originalAnswers
  index         Int      @db.SmallInt
  question      Question @relation(fields: [questionId], references: [id])
  questionId    Int      @map("question_id")
  createdAt     DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt     DateTime @updatedAt @map("updated_at") @db.Timestamptz

  @@unique([discordUserId, questionId])
  @@map("answers")
}

enum Language {
  en
  nl
}
