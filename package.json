{
  "name": "akira",
  "version": "2.1.1",
  "private": true,
  "description": "ðŸ¤– Akira is a multipurpose Discord bot.",
  "homepage": "https://github.com/daniellwdb/akira#readme",
  "bugs": {
    "url": "https://github.com/daniellwdb/akira/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daniellwdb/akira.git"
  },
  "license": "MIT",
  "author": "Daniell Wijdenbosch <daniellwdb@icloud.com>",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && NODE_ENV=development npm run nexus:reflect && tsc",
    "gen-env-types": "gen-env-types .env -o @types/node/index.d.ts -e .",
    "postinstall": "husky install",
    "migrate": "DATABASE_URL=$(heroku config:get DATABASE_URL -a akira-bot-discord) prisma migrate deploy",
    "migrate:dev": "prisma migrate dev --create-only",
    "nexus:reflect": "SHOULD_EXIT_AFTER_GENERATE_ARTIFACTS=true ts-node --transpile-only src/schema.ts",
    "start": "NODE_ENV=development nodemon --transpile-only src/index.ts | pino-pretty",
    "commit": "commit"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "subject-case": [
        2,
        "always",
        "lower-case"
      ],
      "scope-case": [
        2,
        "always",
        "lower-case"
      ],
      "scope-enum": [
        2,
        "always",
        [
          "akira",
          "deps",
          "website"
        ]
      ],
      "type-case": [
        2,
        "always",
        "lower-case"
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "build",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "lint-staged": {
    "**/*.{md}": [
      "prettier --write"
    ],
    "**/*.{ts,tsx,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@elastic/ecs-pino-format": "^1.1.1",
    "@mgcrea/fastify-session": "^0.14.1",
    "@mgcrea/fastify-session-redis-store": "^0.9.1",
    "@prisma/client": "^2.21.2",
    "apollo-server-fastify": "^3.0.0-alpha.3",
    "discord.js": "^12.5.3",
    "dotenv": "^8.2.0",
    "fastify": "^3.15.0",
    "fastify-cookie": "^5.3.0",
    "fastify-cors": "^5.2.0",
    "fastify-passport": "^0.4.2",
    "fuse.js": "^6.4.6",
    "glob": "^7.1.6",
    "graphql": "^15.5.0",
    "graphql-middleware": "^6.0.7",
    "graphql-shield": "^7.5.0",
    "i18next": "^20.2.2",
    "i18next-fs-backend": "^1.1.1",
    "ioredis": "^4.27.1",
    "lexure": "^0.17.0",
    "make-promises-safe": "^5.1.0",
    "nexus": "^1.0.0",
    "nexus-plugin-prisma": "^0.34.1",
    "passport-discord": "^0.1.4",
    "pino": "^6.11.3",
    "pino-elasticsearch": "^5.4.0",
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-angular": "^12.1.4",
    "@commitlint/prompt-cli": "^12.1.4",
    "@types/glob": "^7.1.3",
    "@types/i18next-fs-backend": "^1.0.0",
    "@types/ioredis": "^4.26.3",
    "@types/passport-discord": "^0.1.3",
    "@types/pino": "^6.3.8",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "gen-env-types": "^1.3.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.8.0",
    "prettier": "^2.2.1",
    "prisma": "^2.21.2",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
