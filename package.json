{
  "name": "akira",
  "version": "1.0.1",
  "private": true,
  "description": "ðŸ¤– Akira is a multipurpose Discord bot.",
  "homepage": "https://github.com/pandaniell/akira#readme",
  "bugs": {
    "url": "https://github.com/pandaniell/akira/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pandaniell/akira.git"
  },
  "license": "MIT",
  "author": "pandaniell <daniell.wdb@icloud.com>",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && NODE_ENV=development npm run nexus:reflect && tsc",
    "gen-env-types": "gen-env-types .env -o @types/node/index.d.ts -e .",
    "postinstall": "husky install",
    "migrate": "DATABASE_URL=$(heroku config:get DATABASE_URL -a akira-bot-discord) prisma migrate deploy --preview-feature",
    "migrate:dev": "prisma migrate dev --create-only --preview-feature",
    "nexus:reflect": "SHOULD_EXIT_AFTER_GENERATE_ARTIFACTS=true ts-node --transpile-only src/schema.ts",
    "start": "NODE_ENV=development nodemon --transpile-only src/index.ts | pino-pretty"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "build",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "lint-staged": {
    "**/*.{md}": [
      "prettier --write"
    ],
    "**/*.{ts,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@elastic/ecs-pino-format": "^1.1.1",
    "@mgcrea/fastify-session": "^0.13.0",
    "@mgcrea/fastify-session-redis-store": "^0.9.1",
    "@prisma/client": "^2.18.0",
    "apollo-server-fastify": "^3.0.0-alpha.3",
    "discord.js": "^12.5.1",
    "dotenv": "^8.2.0",
    "fastify": "^3.13.0",
    "fastify-cookie": "^5.1.0",
    "fastify-cors": "^5.2.0",
    "fastify-passport": "^0.4.2",
    "glob": "^7.1.6",
    "graphql": "^15.5.0",
    "graphql-middleware": "^6.0.4",
    "graphql-shield": "^7.5.0",
    "i18next": "^20.1.0",
    "i18next-fs-backend": "^1.1.1",
    "ioredis": "^4.24.6",
    "make-promises-safe": "^5.1.0",
    "nexus": "^1.0.0",
    "nexus-plugin-prisma": "^0.33.0",
    "passport-discord": "^0.1.4",
    "pino": "^6.11.1",
    "pino-elasticsearch": "^5.4.0",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-angular": "^12.0.1",
    "@types/glob": "^7.1.3",
    "@types/i18next-fs-backend": "^1.0.0",
    "@types/ioredis": "^4.22.0",
    "@types/passport-discord": "^0.1.3",
    "@types/pino": "^6.3.6",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "gen-env-types": "^1.0.5",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.7.0",
    "prettier": "^2.2.1",
    "prisma": "^2.18.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
